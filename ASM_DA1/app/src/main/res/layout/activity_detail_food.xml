<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="16dp"
    tools:context=".CustomerDetailFoodActivity">
    <TextView
        android:text="Chi tiet mon an"
        android:textSize="24sp"
        android:textAllCaps="true"
        android:textColor="#FF6D00"
        android:textStyle="bold"
        android:padding="8dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvNamePopularDetail"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="Pizza"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imvPopularDetail"
        android:src="@drawable/pop_2"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>
    <TextView
        android:id="@+id/tvPriceDetail"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:text="666666"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <ImageView
            android:id="@+id/imvMinus"
            android:src="@drawable/minus"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/tvTotalPopularDetail"
            android:text="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/imvPlus"
            android:src="@drawable/plus"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
    </LinearLayout>
    <TextView
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:padding="8dp"
        android:text="Describe"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvDescribePopularDetail"
        android:text="kkkkkkkkkkkkkk"
        android:gravity="center"
        android:padding="8dp"
        android:maxLines="3"
        android:textSize="14sp"
        android:textColor="#323131"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvAddDetail"
            android:text="Add food"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:background="@drawable/background_gradian_button1"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>

</LinearLayout>