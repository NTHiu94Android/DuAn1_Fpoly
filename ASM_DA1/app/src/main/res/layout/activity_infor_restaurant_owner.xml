<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F4F4"
    tools:context=".InforRestaurantOwnerActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:background="@drawable/background_textview"
        android:layout_marginBottom="8dp"
        android:layout_height="200dp">
        <ImageView
            android:src="@drawable/ic_managers128"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:text="Cài đặt\nnhà hàng"
            android:textColor="#FF6D00"
            android:textStyle="bold"
            android:textSize="36sp"
            android:gravity="center|start"
            android:paddingStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvUpdateInforRestaurant"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="@drawable/background_textview"
        android:layout_marginBottom="1dp"
        android:text="Cập nhật nhà hàng"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvDeleteInforRestaurant"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="@drawable/background_textview"
        android:layout_marginBottom="8dp"
        android:text="Xóa nhà hàng"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvLogoutInforRestaurant"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/background_textview"
        android:text="Đăng xuất"
        android:textSize="16sp"
        android:textColor="#D50000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>