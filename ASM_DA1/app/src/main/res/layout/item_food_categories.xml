<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layoutListFoodTypeItem"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imvListFoodTypeItem"
            android:src="@drawable/pizza"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/tvListNameFoodTypeItem"
                android:text="Kho ga la chanh"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLines="1"
                android:lines="1"
                android:paddingVertical="2dp"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvListDescribeFoodTypeItem"
                android:text="Kho ga la chanh"
                android:textSize="12sp"
                android:textColor="#605F5F"
                android:paddingVertical="2dp"
                android:layout_marginBottom="4dp"
                android:maxLines="1"
                android:lines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvListPriceFoodTypeItem"
                android:text="40000"
                android:textSize="12sp"
                android:textColor="#D50000"
                android:paddingVertical="2dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>