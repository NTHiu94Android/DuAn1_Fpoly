<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/button_gradian_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imvRestaurantItem"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_restaurant256"
            android:scaleType="fitXY"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="150dp"/>
        <TextView
            android:id="@+id/tvNameRestaurantItem"
            android:text="Ngọc Thanh"
            android:textStyle="bold"
            android:textSize="12sp"
            android:lines="1"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:fontFamily="@font/hobostd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvAddressRestaurantItem"
            android:text="Dc: Di An - Binh Duong"
            android:padding="4dp"
            android:lines="1"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>